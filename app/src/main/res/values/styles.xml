<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeFullScreen" parent="@style/AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="color">@color/colorLightGrey</item>
        <item name="android:color">@color/colorLightGrey</item>
    </style>

    <declare-styleable name="Font_TextView">
        <attr name="fontType" format="enum">
            <enum name="bold" value="0" />
            <enum name="thin" value="1" />
            <enum name="light" value="2" />
        </attr>

        <attr name="colorType" format="enum">
            <enum name="yellow" value="883377" />
        </attr>
    </declare-styleable>

</resources>