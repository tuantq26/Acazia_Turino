<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorYellow">


    <com.tuantq.turino.view.widget.SquareImageView
        android:id="@+id/imv_logo"
        android:layout_width="@dimen/size_imv_logo"
        android:layout_height="@dimen/size_imv_logo"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tuantq.turino.view.widget.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_2"
        android:text="@string/app_name"
        android:textSize="@dimen/size_tv_logo"
        app:fontType="light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imv_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>